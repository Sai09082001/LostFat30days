<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/abc">
        <shape>

            <gradient android:startColor="#64fb44"

                android:centerColor="#defb44"

                android:centerY="1.0"

                android:endColor="#ff0303"

                android:angle="270"/>

        </shape>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <shape>
                <gradient android:startColor="#fb8344"

                    android:centerColor="#e83030"

                    android:centerY="1.0"

                    android:endColor="#ff0303"

                    android:angle="360"/>
            </shape>
        </clip>
    </item>
</layer-list>