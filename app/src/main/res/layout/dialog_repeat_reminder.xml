<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="@dimen/padding_start">

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/repeat"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:text="@string/sunday"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/CheckBox"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:text="@string/monday"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/CheckBox"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_tue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:text="@string/tuesday"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/CheckBox"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:text="@string/wednesday"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/CheckBox"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:text="@string/thursday"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/CheckBox"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:text="@string/friday"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/CheckBox"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:text="@string/saturday"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/CheckBox"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_btn_cancel"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="@string/cancel"
                android:textColor="@color/blueLight"
                android:textSize="16dp"
                tools:ignore="SpUsage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_btn_border_large"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>