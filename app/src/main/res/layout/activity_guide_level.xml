<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.vuthaihung.loseflat.ui.activities.GuideLevelActivity">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/appCompatTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/_16sdp"
		android:layout_marginTop="@dimen/_16sdp"
		android:fontFamily="sans-serif-medium"
		android:gravity="start"
		android:lineSpacingExtra="6dp"
		android:maxLines="2"
		android:text="@string/title_guide_level"
		android:textColor="@color/grayTextColor"
		android:textSize="20dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="SpUsage" />

	<androidx.cardview.widget.CardView
		android:id="@+id/card_1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="@dimen/_20sdp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
		card_view:cardCornerRadius="10dp">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_training_header">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/img_thumb"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:srcCompat="@drawable/belly1" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:padding="30dp">

				<LinearLayout
					android:layout_marginTop="@dimen/_24sdp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal">

					<androidx.appcompat.widget.AppCompatTextView
						android:fontFamily="sans-serif-medium"
						android:layout_marginEnd="@dimen/_12sdp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/level_beginner"
						android:textColor="@color/white"
						android:textSize="24sp" />

					<androidx.appcompat.widget.AppCompatImageView
						android:tint="@color/white"
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginEnd="2dp"
						app:srcCompat="@drawable/ic_flash" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash" />

				</LinearLayout>

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/btn_choose_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingVertical="8dp"
					android:paddingHorizontal="28dp"
					android:layout_marginTop="20dp"
					android:background="@drawable/bg_btn_choose"
					android:text="@string/btn_choose"
					android:textColor="@color/white" />
			</LinearLayout>

		</FrameLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/card_2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/padding_start"
		android:layout_marginTop="16dp"
		android:layout_marginRight="@dimen/padding_start"
		android:layout_marginBottom="5dp"
		card_view:cardCornerRadius="10dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/card_1">
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_training_header"
			>

			<androidx.appcompat.widget.AppCompatImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:srcCompat="@drawable/belly2" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:padding="30dp">

				<LinearLayout
					android:layout_marginTop="@dimen/_24sdp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal">

					<androidx.appcompat.widget.AppCompatTextView
						android:fontFamily="sans-serif-medium"
						android:layout_marginEnd="@dimen/_12sdp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/level_intermediate"
						android:textColor="@color/white"
						android:textSize="24sp" />

					<androidx.appcompat.widget.AppCompatImageView
						android:tint="@color/white"
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginEnd="2dp"
						app:srcCompat="@drawable/ic_flash" />

					<androidx.appcompat.widget.AppCompatImageView
						android:tint="@color/white"
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash" />

					<androidx.appcompat.widget.AppCompatImageView
						android:id="@+id/ivLevel3"
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash" />

				</LinearLayout>

				<androidx.appcompat.widget.AppCompatTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:paddingVertical="8dp"
					android:paddingHorizontal="28dp"
					android:background="@drawable/bg_btn_choose"
					android:text="@string/btn_choose"
					android:textColor="@color/white" />
			</LinearLayout>

		</FrameLayout>


	</androidx.cardview.widget.CardView>
	<androidx.cardview.widget.CardView
		android:id="@+id/card_3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/padding_start"
		android:layout_marginTop="16dp"
		android:layout_marginRight="@dimen/padding_start"
		android:layout_marginBottom="5dp"
		card_view:cardCornerRadius="10dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/card_2">

		<FrameLayout

			android:layout_width="match_parent"
			android:layout_height="@dimen/height_training_header"
			>

			<androidx.appcompat.widget.AppCompatImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:srcCompat="@drawable/belly3" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:padding="30dp">

				<LinearLayout
					android:layout_marginTop="@dimen/_24sdp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal">

					<androidx.appcompat.widget.AppCompatTextView
						android:fontFamily="sans-serif-medium"
						android:layout_marginEnd="@dimen/_12sdp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/level_advanced"
						android:textColor="@color/white"
						android:textSize="24sp" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginEnd="2dp"
						android:tint="@color/white"
						app:srcCompat="@drawable/ic_flash" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						android:tint="@color/white"
						app:srcCompat="@drawable/ic_flash" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						android:tint="@color/white"
						app:srcCompat="@drawable/ic_flash" />

				</LinearLayout>

				<androidx.appcompat.widget.AppCompatTextView
					android:paddingVertical="8dp"
					android:paddingHorizontal="28dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:background="@drawable/bg_btn_choose"
					android:text="@string/btn_choose"
					android:textColor="@color/white" />
			</LinearLayout>

		</FrameLayout>
	</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>