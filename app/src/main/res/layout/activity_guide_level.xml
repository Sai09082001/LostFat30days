<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/appCompatTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/_16sdp"
		android:layout_marginTop="@dimen/_16sdp"
		android:fontFamily="sans-serif-medium"
		android:gravity="start"
		android:lineSpacingExtra="6dp"
		android:maxLines="2"
		android:text="@string/title_guide_level"
		android:textColor="@color/grayTextColor"
		android:textSize="20dp"
		tools:ignore="SpUsage" />

	<LinearLayout
		android:layout_marginTop="16dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<androidx.cardview.widget.CardView
			android:id="@+id/card_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="@dimen/padding_start"
			android:layout_marginTop="@dimen/padding_start"
			android:layout_marginRight="@dimen/padding_start"
			card_view:cardCornerRadius="10dp">

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_training_header">

				<androidx.appcompat.widget.AppCompatImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/belly1" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:orientation="vertical"
					android:paddingStart="@dimen/_16sdp">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/_24sdp"
						android:gravity="center"
						android:orientation="horizontal">

						<androidx.appcompat.widget.AppCompatTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginEnd="@dimen/_12sdp"
							android:fontFamily="sans-serif-medium"
							android:text="@string/level_beginner"
							android:textColor="@color/white"
							android:textSize="24sp" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginEnd="2dp"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_flash" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginRight="2dp"
							app:srcCompat="@drawable/ic_flash" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginRight="2dp"
							app:srcCompat="@drawable/ic_flash" />

					</LinearLayout>

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/btn_choose_1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20dp"
						android:background="@drawable/bg_btn_choose"
						android:paddingHorizontal="28dp"
						android:paddingVertical="8dp"
						android:text="@string/btn_choose"
						android:textColor="@color/white"
						android:textSize="16dp"
						tools:ignore="SpUsage" />

				</LinearLayout>

			</FrameLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/card_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="@dimen/padding_start"
			android:layout_marginTop="@dimen/padding_start"
			android:layout_marginRight="@dimen/padding_start"
			card_view:cardCornerRadius="10dp">

			<FrameLayout

				android:layout_width="match_parent"
				android:layout_height="@dimen/height_training_header">

				<androidx.appcompat.widget.AppCompatImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/belly2" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:orientation="vertical"
					android:paddingStart="@dimen/_16sdp">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/_24sdp"
						android:gravity="center"
						android:orientation="horizontal">

						<androidx.appcompat.widget.AppCompatTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginEnd="@dimen/_12sdp"
							android:fontFamily="sans-serif-medium"
							android:text="@string/level_intermediate"
							android:textColor="@color/white"
							android:textSize="24sp" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginEnd="2dp"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_flash" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginRight="2dp"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_flash" />

						<androidx.appcompat.widget.AppCompatImageView
							android:id="@+id/ivLevel3"
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginRight="2dp"
							app:srcCompat="@drawable/ic_flash" />

					</LinearLayout>

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/btn_choose_2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20dp"
						android:background="@drawable/bg_btn_choose"
						android:paddingHorizontal="28dp"
						android:paddingVertical="8dp"
						android:text="@string/btn_choose"
						android:textColor="@color/white"
						android:textSize="16dp"
						tools:ignore="SpUsage" />

				</LinearLayout>

			</FrameLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/card_3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="@dimen/padding_start"
			android:layout_marginTop="@dimen/padding_start"
			android:layout_marginRight="@dimen/padding_start"
			card_view:cardCornerRadius="10dp">

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_training_header">

				<androidx.appcompat.widget.AppCompatImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/belly3" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:orientation="vertical"
					android:paddingStart="@dimen/_16sdp">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/_24sdp"
						android:gravity="center"
						android:orientation="horizontal">

						<androidx.appcompat.widget.AppCompatTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginEnd="@dimen/_12sdp"
							android:fontFamily="sans-serif-medium"
							android:text="@string/level_advanced"
							android:textColor="@color/white"
							android:textSize="24sp" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginEnd="2dp"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_flash" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginRight="2dp"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_flash" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:layout_marginTop="1dp"
							android:layout_marginRight="2dp"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_flash" />

					</LinearLayout>

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/btn_choose_3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20dp"
						android:background="@drawable/bg_btn_choose"
						android:paddingHorizontal="28dp"
						android:paddingVertical="8dp"
						android:text="@string/btn_choose"
						android:textColor="@color/white"
						android:textSize="16dp"
						tools:ignore="SpUsage" />

				</LinearLayout>

			</FrameLayout>
		</androidx.cardview.widget.CardView>

	</LinearLayout>


</LinearLayout>