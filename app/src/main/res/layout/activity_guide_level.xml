<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.merryblue.femalefitness.ui.activities.GuideLevelActivity">

	<androidx.appcompat.widget.AppCompatTextView
		fontPath="@string/font_bold"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"
		android:gravity="center"
		android:paddingLeft="50dp"
		android:paddingRight="50dp"
		android:text="@string/title_guide_level"
		android:textColor="@color/grayTextColor"
		android:textSize="22sp"
		app:layout_constraintTop_toTopOf="parent" />
	<androidx.cardview.widget.CardView
		android:id="@+id/card_1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/padding_start"
		android:layout_marginTop="8dp"
		android:layout_marginRight="@dimen/padding_start"
		android:layout_marginBottom="5dp"
		card_view:cardCornerRadius="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.25">

		<FrameLayout

			android:layout_width="match_parent"
			android:layout_height="@dimen/height_training_header"
			>

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/img_thumb"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:srcCompat="@drawable/belly1" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:padding="30dp">


				<androidx.appcompat.widget.AppCompatTextView
					fontPath="@string/font_bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/level_beginner"
					android:textColor="@color/white"
					android:textSize="24sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:text="@string/description_full_body_level_1"
					android:textColor="@color/white"
					android:textSize="16sp" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:layout_marginTop="8dp"
					android:gravity="center"
					android:orientation="horizontal"
					android:transitionName="workout">

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash_enable" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash" />

				</LinearLayout>
			</LinearLayout>

		</FrameLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/card_2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/padding_start"
		android:layout_marginTop="16dp"
		android:layout_marginRight="@dimen/padding_start"
		android:layout_marginBottom="5dp"
		card_view:cardCornerRadius="10dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/card_1">
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_training_header"
			>

			<androidx.appcompat.widget.AppCompatImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:srcCompat="@drawable/belly2" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:padding="30dp">

				<androidx.appcompat.widget.AppCompatTextView
					fontPath="@string/font_bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/level_intermediate"
					android:textColor="@color/white"
					android:textSize="24sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:text="@string/description_full_body_level_2"
					android:textColor="@color/white"
					android:textSize="16sp" />

				<LinearLayout
					android:layout_width="51dp"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:layout_marginTop="8dp"
					android:gravity="center"
					android:orientation="horizontal"
					android:transitionName="workout">

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash_enable" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash_enable" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash" />

				</LinearLayout>
			</LinearLayout>

		</FrameLayout>


	</androidx.cardview.widget.CardView>
	<androidx.cardview.widget.CardView
		android:id="@+id/card_3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/padding_start"
		android:layout_marginTop="16dp"
		android:layout_marginRight="@dimen/padding_start"
		android:layout_marginBottom="5dp"
		card_view:cardCornerRadius="10dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/card_2">

		<FrameLayout

			android:layout_width="match_parent"
			android:layout_height="@dimen/height_training_header"
			>

			<androidx.appcompat.widget.AppCompatImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:srcCompat="@drawable/belly3" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:padding="30dp">

				<androidx.appcompat.widget.AppCompatTextView
					fontPath="@string/font_bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/level_advanced"
					android:textColor="@color/white"
					android:textSize="24sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:text="@string/description_full_body_level_3"
					android:textColor="@color/white"
					android:textSize="16sp" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:layout_marginTop="8dp"
					android:gravity="center"
					android:orientation="horizontal"
					android:transitionName="workout">

					<androidx.appcompat.widget.AppCompatImageView
						android:id="@+id/ivLevel1"
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash_enable" />

					<androidx.appcompat.widget.AppCompatImageView
						android:id="@+id/ivLevel2"
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash_enable" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginTop="1dp"
						android:layout_marginRight="2dp"
						app:srcCompat="@drawable/ic_flash_enable" />

				</LinearLayout>
			</LinearLayout>

		</FrameLayout>
	</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>