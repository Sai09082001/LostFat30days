<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_onboarding_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:background="@color/gray_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/_56sdp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_gravity="center|start"
                android:textSize="24dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="Contrary to popular\n belief Ipsum"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:layout_gravity="center|start"
                android:textSize="16dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="Contrary to popular Ipsu \nnot simply"
                android:layout_height="wrap_content"/>

            <TableRow
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:background="@drawable/bg_view_unstate_boarding"
                    android:layout_width="34dp"
                    android:layout_height="4.5dp"/>
                <View
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:background="@drawable/bg_view_state_boarding"
                    android:layout_width="34dp"
                    android:layout_height="4.5dp"/>
                <View
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:background="@drawable/bg_view_unstate_boarding"
                    android:layout_width="34dp"
                    android:layout_height="4.5dp"/>
            </TableRow>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_next_boarding"
            android:src="@drawable/ic_next_boarding"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_36sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>