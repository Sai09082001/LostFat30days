<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.nhn.fitness.ui.activities.ChooseLevelActivity">

	<LinearLayout
		android:id="@+id/select_plans_action_bar"
		android:layout_width="match_parent"
		android:gravity="center|start"
		android:layout_height="56dp"
		android:background="@color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:orientation="horizontal" >

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/iv_back_select_plans"
			android:padding="8dp"
			android:layout_marginStart="24dp"
			android:src="@drawable/back_black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<androidx.appcompat.widget.AppCompatTextView
			android:fontFamily="sans-serif-medium"
			android:layout_marginStart="8dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/title_activity_choose_plan"
			android:textColor="@color/black"
			android:textSize="20dp" />
	</LinearLayout>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="@dimen/_16sdp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/select_plans_action_bar">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<androidx.cardview.widget.CardView
				android:id="@+id/card_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/padding_start"
				android:layout_marginRight="@dimen/padding_start"
				android:layout_marginTop="@dimen/padding_start"
				card_view:cardCornerRadius="10dp">
				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/height_training_header">

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:scaleType="fitXY"
						app:srcCompat="@drawable/belly1" />

					<LinearLayout
						android:paddingStart="@dimen/_16sdp"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:orientation="vertical">

						<LinearLayout
							android:layout_marginTop="@dimen/_24sdp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:orientation="horizontal">

							<androidx.appcompat.widget.AppCompatTextView
								android:fontFamily="sans-serif-medium"
								android:layout_marginEnd="@dimen/_12sdp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/level_beginner"
								android:textColor="@color/white"
								android:textSize="24sp" />

							<androidx.appcompat.widget.AppCompatImageView
								android:tint="@color/white"
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginEnd="2dp"
								app:srcCompat="@drawable/ic_flash" />

							<androidx.appcompat.widget.AppCompatImageView
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginRight="2dp"
								app:srcCompat="@drawable/ic_flash" />

							<androidx.appcompat.widget.AppCompatImageView
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginRight="2dp"
								app:srcCompat="@drawable/ic_flash" />

						</LinearLayout>

						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/btn_choose_1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingVertical="8dp"
							android:textSize="16dp"
							android:paddingHorizontal="28dp"
							android:layout_marginTop="20dp"
							android:background="@drawable/bg_btn_un_choose"
							android:text="@string/btn_choose"
							android:textColor="@color/white"
							tools:ignore="SpUsage" />

					</LinearLayout>

				</FrameLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/padding_start"
				android:layout_marginRight="@dimen/padding_start"
				android:layout_marginTop="@dimen/padding_start"
				card_view:cardCornerRadius="10dp">
				<FrameLayout

					android:layout_width="match_parent"
					android:layout_height="@dimen/height_training_header">

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:scaleType="fitXY"
						app:srcCompat="@drawable/belly2" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:orientation="vertical"
						android:paddingStart="@dimen/_16sdp">

						<LinearLayout
							android:layout_marginTop="@dimen/_24sdp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:orientation="horizontal">

							<androidx.appcompat.widget.AppCompatTextView
								android:fontFamily="sans-serif-medium"
								android:layout_marginEnd="@dimen/_12sdp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/level_intermediate"
								android:textColor="@color/white"
								android:textSize="24sp" />

							<androidx.appcompat.widget.AppCompatImageView
								android:tint="@color/white"
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginEnd="2dp"
								app:srcCompat="@drawable/ic_flash" />

							<androidx.appcompat.widget.AppCompatImageView
								android:tint="@color/white"
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginRight="2dp"
								app:srcCompat="@drawable/ic_flash" />

							<androidx.appcompat.widget.AppCompatImageView
								android:id="@+id/ivLevel3"
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginRight="2dp"
								app:srcCompat="@drawable/ic_flash" />

						</LinearLayout>

						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/btn_choose_2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="16dp"
							android:layout_marginTop="20dp"
							android:paddingVertical="8dp"
							android:paddingHorizontal="28dp"
							android:background="@drawable/bg_btn_un_choose"
							android:text="@string/btn_choose"
							android:textColor="@color/white"
							tools:ignore="SpUsage" />

					</LinearLayout>

				</FrameLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/padding_start"
				android:layout_marginRight="@dimen/padding_start"
				android:layout_marginTop="@dimen/padding_start"
				card_view:cardCornerRadius="10dp">
				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/height_training_header">

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:scaleType="fitXY"
						app:srcCompat="@drawable/belly3" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:orientation="vertical"
						android:paddingStart="@dimen/_16sdp">

						<LinearLayout
							android:layout_marginTop="@dimen/_24sdp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:orientation="horizontal">

							<androidx.appcompat.widget.AppCompatTextView
								android:fontFamily="sans-serif-medium"
								android:layout_marginEnd="@dimen/_12sdp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/level_advanced"
								android:textColor="@color/white"
								android:textSize="24sp" />

							<androidx.appcompat.widget.AppCompatImageView
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginEnd="2dp"
								android:tint="@color/white"
								app:srcCompat="@drawable/ic_flash" />

							<androidx.appcompat.widget.AppCompatImageView
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginRight="2dp"
								android:tint="@color/white"
								app:srcCompat="@drawable/ic_flash" />

							<androidx.appcompat.widget.AppCompatImageView
								android:layout_width="12dp"
								android:layout_height="12dp"
								android:layout_marginTop="1dp"
								android:layout_marginRight="2dp"
								android:tint="@color/white"
								app:srcCompat="@drawable/ic_flash" />

						</LinearLayout>

						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/btn_choose_3"
							android:paddingVertical="8dp"
							android:paddingHorizontal="28dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:background="@drawable/bg_btn_un_choose"
							android:textSize="16dp"
							android:text="@string/btn_choose"
							android:textColor="@color/white"
							tools:ignore="SpUsage" />

					</LinearLayout>

				</FrameLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginStart="@dimen/padding_start"
				android:layout_marginEnd="@dimen/padding_start"
				android:layout_marginTop="@dimen/padding_start"
				card_view:cardCornerRadius="10dp">
				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/height_training_header">

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:scaleType="fitXY"
						app:srcCompat="@drawable/mytranning" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:orientation="vertical">

						<androidx.appcompat.widget.AppCompatTextView
							android:layout_gravity="center"
							android:layout_marginBottom="8dp"
							android:fontFamily="sans-serif-medium"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/my_training"
							android:textColor="@color/white"
							android:textSize="24sp" />

						<androidx.appcompat.widget.AppCompatTextView
							android:layout_gravity="center"
							android:fontFamily="sans-serif-medium"
							android:layout_width="wrap_content"
							android:lineSpacingExtra="4dp"
							android:layout_marginHorizontal="@dimen/_40sdp"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:text="@string/title_my_training"
							android:textColor="@color/white"
							android:textSize="14sp" />

						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/btn_choose_4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							android:layout_marginTop="@dimen/_20sdp"
							android:background="@drawable/bg_btn_un_choose"
							android:paddingHorizontal="28dp"
							android:paddingVertical="8dp"
							android:text="@string/add_exercise"
							android:textSize="16dp"
							android:textColor="@color/white"
							tools:ignore="SpUsage" />

					</LinearLayout>

				</FrameLayout>
			</androidx.cardview.widget.CardView>

		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>