<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="@dimen/padding_start"
	android:layout_marginTop="8dp"
	android:layout_marginRight="@dimen/padding_start"
	android:layout_marginBottom="4dp"
	android:elevation="3dp"
	android:orientation="vertical"
	app:cardCornerRadius="5dp"
	app:cardUseCompatPadding="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/img_thumb"
			android:layout_width="match_parent"
			android:layout_height="240dp"
			android:scaleType="fitXY"
			app:srcCompat="@drawable/quit_bg" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/txt_title"
			fontPath="@string/font_bold"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:paddingLeft="@dimen/padding_start"
			android:paddingTop="@dimen/padding_start"
			android:paddingRight="@dimen/padding_start"
			android:text="Why High Heels Make Your Waist Slimmer?"
			android:textColor="@color/black"
			android:textSize="16sp" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/txt_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="2"
			android:paddingLeft="@dimen/padding_start"
			android:paddingTop="8dp"
			android:paddingRight="@dimen/padding_start"
			android:paddingBottom="@dimen/padding_start"
			android:text="Why High Heels Make Your Waist Slimmer?"
			android:textColor="@color/text_gray"
			android:textSize="16sp" />

	</LinearLayout>

</androidx.cardview.widget.CardView>