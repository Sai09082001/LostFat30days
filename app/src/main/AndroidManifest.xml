<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.merryblue.femalefitness.losefat">

	<uses-permission android:name="android.permission.INTERNET" />

	<application

		android:name="com.merryblue.femalefitness.ui.base.BaseApplication"
		android:allowBackup="false"
		android:icon="@drawable/logo"
		android:label="@string/app_name"
		android:largeHeap="true"
		android:screenOrientation="portrait"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
		tools:ignore="GoogleAppIndexingWarning"
		tools:replace="android:allowBackup">

		<meta-data
			android:name="com.google.android.gms.ads.APPLICATION_ID"
			android:value="@string/admob_app_id"/>
		<uses-library android:name="org.apache.http.legacy" android:required="false"/>

		<activity android:name="com.merryblue.femalefitness.ui.activities.RestDayActivity"/>
		<activity android:name="com.merryblue.femalefitness.ui.activities.ChooseLevelActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.GuideLevelActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.GuideGenderActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.EditTrainingActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.AddExerciseActivity" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.ResultActivity"
			android:theme="@style/FullScreen" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.RunActivity"
			android:theme="@style/FullScreen" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.ChallengeActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.ReminderActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.ReplaceActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.ProfileActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.TipsListActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.TipsDetailActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.EditExerciseActivity" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.VideoWorkoutActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.EditPlanActivity" />
		<activity android:name="com.merryblue.femalefitness.ui.activities.SectionDetailActivity" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.GuideReminderActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.GuideGoalActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.GuideActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.SettingGoalActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.HistoryActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.PolicyActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.OnBoardingActivity01"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.OnBoardingActivity02"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.OnBoardingActivity03"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.SplashActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize"
			android:theme="@style/Theme_AppCompat_Light_NoActionBar_FullScreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.merryblue.femalefitness.ui.activities.MainActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />

		<receiver android:name="com.merryblue.femalefitness.utils.AlarmReceiver">
			<intent-filter>
				<action android:name="com.app.action.alarmmanager" />
			</intent-filter>
		</receiver>
		<receiver android:name="com.merryblue.femalefitness.utils.MyBroadcastReceiver">
			<intent-filter>
				<action android:name="com.tuankhaiit.fitness.cancel_notifycation" />
			</intent-filter>
		</receiver>
	</application>

</manifest>